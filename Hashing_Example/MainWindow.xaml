<Window x:Class="Hashing_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hashing_Example"
        mc:Ignorable="d"
        xmlns:c="clr-namespace:Hashing_Example"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <c:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="54,47,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding SelectedHashing}"/>
        <TextBox HorizontalAlignment="Left" Margin="495,47,0,0" Text="{Binding Key}" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <TextBox HorizontalAlignment="Left" Margin="495,70,0,0" Text="{Binding Message}" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <TextBox HorizontalAlignment="Left" Margin="495,170,0,0" Text="{Binding MAC}" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" IsEnabled="False"/>
        <RadioButton Content="ASCII" HorizontalAlignment="Left" Margin="518,220,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Content="HEX" HorizontalAlignment="Left" Margin="518,240,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
